{
    "name": "My Bookmarks",
    "description": "A browser action with a popup dump of all bookmarks, including search, add, edit and delete.",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "storage",
        "activeTab",
        "bookmarks"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [{
        "resources": ["data/*.json"],
        "matches": ["http://*/*", "https://*/*"]
    }]
}